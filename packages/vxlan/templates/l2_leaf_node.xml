<config-template xmlns="http://tail-f.com/ns/config/1.0">
    <devices xmlns="http://tail-f.com/ns/ncs">
        <device>
            <name>{string(node-name)}</name>
            <config>

                <vlan xmlns="http://tail-f.com/ned/cisco-nx">
                    <vlan-list>
                        <id>{string(../../vlan-id)}</id>
                        <name>{string(../../vlan-name)}</name>
                        <vn-segment>{string(../../vni)}</vn-segment>
                    </vlan-list>
                </vlan>

                <evpn xmlns="http://tail-f.com/ned/cisco-nx">
                    <vni when="{not(../../evpn/route-target/auto)}">
                        <id>{string(../../vni)}</id>
                        <l2/>
                        <rd>{string(../../evpn/rd)}</rd>
                        <route-target>
                            <method>import</method>
                            <rt>{string(../../evpn/route-target/import)}</rt>
                        </route-target>
                        <route-target>
                            <method>export</method>
                            <rt>{string(../../evpn/route-target/export)}</rt>
                        </route-target>
                    </vni>
                    <vni when="{../../evpn/route-target/auto}">
                        <id>{string(../../vni)}</id>
                        <l2/>
                        <rd>{string(../../evpn/rd)}</rd>
                        <route-target>
                            <method>import</method>
                            <rt>auto</rt>
                        </route-target>
                        <route-target>
                            <method>export</method>
                            <rt>auto</rt>
                        </route-target>
                    </vni>
                </evpn>

                <interface xmlns="http://tail-f.com/ned/cisco-nx">
                    <nve>
                        <name>1</name>
                        <host-reachability>
                            <protocol>bgp</protocol>
                        </host-reachability>
                        <member>
                            <vni>
                                <id>{string(../../vni)}</id>
                                <ingress-replication when="{../../replication-mode = 'ingress'}">
                                    <protocol>bgp</protocol>
                                </ingress-replication>
                                <mcast-group when="{../../replication-mode = 'multicast'}">{string(../../replication-group)}</mcast-group>
                            </vni>
                        </member>
                        <source-interface>{$NVE_SOURCE}</source-interface>
                        <shutdown tags="delete"/>
                    </nve>
                </interface>

                <interface xmlns="http://tail-f.com/ned/cisco-nx" foreach="{interface/Port-channel}">
                    <port-channel>
                        <name>{string(id)}</name>
                        <switchport when="{mode = 'access'}">
                            <mode>access</mode>
                            <access>
                                <vlan>{string(../../../../vlan-id)}</vlan>
                            </access>
                        </switchport>
                        <switchport when="{mode = 'trunk'}">
                            <mode>trunk</mode>
                            <trunk>
                                <allowed>
                                    <vlan>
                                        <ids>{string(../../../../vlan-id)}</ids>
                                    </vlan>
                                </allowed>
                            </trunk>
                        </switchport>
                        <description>{string(description)}-Port-Channel</description>
                        <spanning-tree>
                            <bpdufilter>enable</bpdufilter>
                            <port>
                                <type>edge</type>
                            </port>
                        </spanning-tree>
                        <storm-control>
                            <broadcast>
                                <level>5.0</level>
                            </broadcast>
                            <unicast>
                                <level>5.0</level>
                            </unicast>
                            <multicast>
                                <level>5.0</level>
                            </multicast>
                        </storm-control>
                        <shutdown tags="delete"/>
                    </port-channel>
                    <Ethernet foreach="{members/Ethernet}">
                        <name>{string(member-id)}</name>
                        <switchport when="{../../mode = 'access'}">
                            <mode>access</mode>
                            <access>
                                <vlan>{string(../../../../../../vlan-id)}</vlan>
                            </access>
                        </switchport>
                        <switchport when="{../../mode = 'trunk'}">
                            <mode>trunk</mode>
                            <trunk>
                                <allowed>
                                    <vlan>
                                        <ids>{string(../../../../../../vlan-id)}</ids>
                                    </vlan>
                                </allowed>
                            </trunk>
                        </switchport>
                        <channel-group>
                            <id>{string(../../id)}</id>
                            <mode>active</mode>
                        </channel-group>
                        <description>{string(../../description)}</description>
                        <spanning-tree>
                            <bpdufilter>enable</bpdufilter>
                            <port>
                                <type>edge</type>
                            </port>
                        </spanning-tree>
                        <storm-control>
                            <broadcast>
                                <level>5.0</level>
                            </broadcast>
                            <unicast>
                                <level>5.0</level>
                            </unicast>
                            <multicast>
                                <level>5.0</level>
                            </multicast>
                        </storm-control>
                        <lldp>
                            <transmit>false</transmit>
                        </lldp>
                        <shutdown tags="delete"/>
                    </Ethernet>
                </interface>

                <interface xmlns="http://tail-f.com/ned/cisco-nx" foreach="{interface/Ethernet}">
                    <Ethernet>
                        <name>{string(id)}</name>
                        <switchport when="{mode = 'access'}">
                            <mode>access</mode>
                            <access>
                                <vlan>{string(../../../../vlan-id)}</vlan>
                            </access>
                        </switchport>
                        <switchport when="{mode = 'trunk'}">
                            <mode>trunk</mode>
                            <trunk>
                                <allowed>
                                    <vlan>
                                        <ids>{string(../../../../vlan-id)}</ids>
                                    </vlan>
                                </allowed>
                            </trunk>
                        </switchport>
                        <description>{string(description)}</description>
                        <spanning-tree>
                            <bpdufilter>enable</bpdufilter>
                            <port>
                                <type>edge</type>
                            </port>
                        </spanning-tree>
                        <storm-control>
                            <broadcast>
                                <level>5.0</level>
                            </broadcast>
                            <unicast>
                                <level>5.0</level>
                            </unicast>
                            <multicast>
                                <level>5.0</level>
                            </multicast>
                        </storm-control>
                        <shutdown tags="delete"/>
                    </Ethernet>
                </interface>

            </config>
        </device>
    </devices>
</config-template>