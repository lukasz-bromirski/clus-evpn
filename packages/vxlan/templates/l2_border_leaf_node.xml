<config-template xmlns="http://tail-f.com/ns/config/1.0">
    <devices xmlns="http://tail-f.com/ns/ncs">
        <device>
            <name>{$DEVICE-NAME}</name>
            <config>

                <vlan xmlns="http://tail-f.com/ned/cisco-nx">
                    <vlan-list>
                        <id>{$DCI_VLAN}</id>
                        <name>{$DCI_VLAN_NAME}</name>
                        <vn-segment>{string(vni)}</vn-segment>
                    </vlan-list>
                </vlan>

                <evpn xmlns="http://tail-f.com/ned/cisco-nx">
                    <vni when="{not(evpn/route-target/auto)}">
                        <id>{string(vni)}</id>
                        <l2/>
                        <rd>{string(evpn/rd)}</rd>
                        <route-target>
                            <method>import</method>
                            <rt>{string(evpn/route-target/import)}</rt>
                        </route-target>
                        <route-target>
                            <method>export</method>
                            <rt>{string(evpn/route-target/export)}</rt>
                        </route-target>
                    </vni>
                    <vni when="{evpn/route-target/auto}">
                        <id>{string(vni)}</id>
                        <l2/>
                        <rd>{string(evpn/rd)}</rd>
                        <route-target>
                            <method>import</method>
                            <rt>auto</rt>
                        </route-target>
                        <route-target>
                            <method>export</method>
                            <rt>auto</rt>
                        </route-target>
                    </vni>
                </evpn>

                <interface xmlns="http://tail-f.com/ned/cisco-nx">
                    <nve>
                        <name>1</name>
                        <host-reachability>
                            <protocol>bgp</protocol>
                        </host-reachability>
                        <member>
                            <vni>
                                <id>{string(vni)}</id>
                                <ingress-replication when="{replication-mode = 'ingress'}">
                                    <protocol>bgp</protocol>
                                </ingress-replication>
                                <mcast-group when="{replication-mode = 'multicast'}">{string(replication-group)}</mcast-group>
                            </vni>
                        </member>
                        <source-interface when="{$NVE_SOURCE}">{$NVE_SOURCE}</source-interface>
                        <shutdown tags="delete"/>
                    </nve>
                </interface>

            </config>
        </device>
    </devices>
</config-template>