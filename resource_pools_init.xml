    <range>
      <start>3001</start>
      <end>3999</end>
    </range>
  </id-pool>
  <id-pool xmlns="http://tail-f.com/pkg/id-allocator">
    <name>lfnc-vlan</name>
    <range>
      <start>2001</start>
      <end>2999</end>
    </range>
