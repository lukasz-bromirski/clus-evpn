<config-template xmlns="http://tail-f.com/ns/config/1.0">
    <devices xmlns="http://tail-f.com/ns/ncs">
        <device>
            <name>{string(node-name)}</name>
            <config>

                <vlan xmlns="http://tail-f.com/ned/cisco-nx">
                    <vlan-list>
                        <id>{string(../../sirb/vlan-id)}</id>
                        <name>{string(../../sirb/vlan-name)}</name>
                        <vn-segment>{string(../../sirb/vni)}</vn-segment>
                    </vlan-list>
                    <vlan-list>
                        <id>{string(vlan-id)}</id>
                        <name>{string(vlan-name)}</name>
                        <vn-segment>{string(vni)}</vn-segment>
                    </vlan-list>
                </vlan>

                <vrf xmlns="http://tail-f.com/ned/cisco-nx">
                    <context>
                        <id>{string(../../name)}</id>
                        <description>{string(../../vrf-description)}</description>
                        <vni>{string(../../sirb/vni)}</vni>
                        <rd>{string(../../sirb/evpn/rd)}</rd>
                        <address-family when="{not(../../sirb/evpn/route-target/auto)}">
                            <ipv4>
                                <unicast>
                                    <route-target>
                                        <method>export</method>
                                        <asn>{string(../../sirb/evpn/route-target/export)}</asn>
                                        <target-evpn>evpn</target-evpn>
                                    </route-target>
                                    <route-target>
                                        <method>export</method>
                                        <asn>{string(../../sirb/evpn/route-target/export)}</asn>
                                        <target-evpn>non-evpn</target-evpn>
                                    </route-target>
                                    <route-target>
                                        <method>import</method>
                                        <asn>{string(../../sirb/evpn/route-target/import)}</asn>
                                        <target-evpn>evpn</target-evpn>
                                    </route-target>
                                    <route-target>
                                        <method>import</method>
                                        <asn>{string(../../sirb/evpn/route-target/import)}</asn>
                                        <target-evpn>non-evpn</target-evpn>
                                    </route-target>
                                </unicast>
                            </ipv4>
                        </address-family>
                        <address-family when="{../../sirb/evpn/route-target/auto}">
                            <ipv4>
                                <unicast>
                                    <route-target>
                                        <method>both</method>
                                        <asn>auto</asn>
                                        <target-evpn>evpn</target-evpn>
                                    </route-target>
                                    <route-target>
                                        <method>both</method>
                                        <asn>auto</asn>
                                        <target-evpn>non-evpn</target-evpn>
                                    </route-target>
                                </unicast>
                            </ipv4>
                        </address-family>
                    </context>
                </vrf>

                <evpn xmlns="http://tail-f.com/ned/cisco-nx">
                    <vni when="{not(evpn/route-target/auto)}">
                        <id>{string(vni)}</id>
                        <l2/>
                        <rd>{string(evpn/rd)}</rd>
                        <route-target>
                            <method>import</method>
                            <rt>{string(evpn/route-target/import)}</rt>
                        </route-target>
                        <route-target>
                            <method>export</method>
                            <rt>{string(evpn/route-target/export)}</rt>
                        </route-target>
                    </vni>
                    <vni when="{evpn/route-target/auto}">
                        <id>{string(vni)}</id>
                        <l2/>
                        <rd>{string(evpn/rd)}</rd>
                        <route-target>
                            <method>import</method>
                            <rt>auto</rt>
                        </route-target>
                        <route-target>
                            <method>export</method>
                            <rt>auto</rt>
                        </route-target>
                    </vni>
                </evpn>

                <router xmlns="http://tail-f.com/ned/cisco-nx">
                    <bgp>
                        <id>{$DEVICE-ASN}</id>
                        <vrf>
                            <name>{string(../../name)}</name>
                            <address-family>
                                <proto>ipv4</proto>
                                <type>unicast</type>
                                <advertise>
                                    <l2vpn>evpn</l2vpn>
                                </advertise>
                                <maximum-paths>
                                    <number>2</number>
                                </maximum-paths>
                                <redistribute>
                                    <direct>
                                        <route-map>{$REDIST-CONNECTED}</route-map>
                                    </direct>
                                    <static>
                                        <route-map>{$REDIST-STATIC}</route-map>
                                    </static>
                                </redistribute>
                            </address-family>
                        </vrf>
                    </bgp>
                </router>

                <interface xmlns="http://tail-f.com/ned/cisco-nx">
                    <nve>
                        <name>1</name>
                        <host-reachability>
                            <protocol>bgp</protocol>
                        </host-reachability>
                        <member>
                            <vni>
                                <id>{string(../../sirb/vni)}</id>
                                <associate-vrf/>
                            </vni>
                            <vni>
                                <id>{string(vni)}</id>
                                <suppress-arp/>
                                <ingress-replication when="{../../replication-mode = 'ingress'}">
                                    <protocol>bgp</protocol>
                                </ingress-replication>
                                <mcast-group when="{../../replication-mode = 'multicast'}">{string(replication-group)}</mcast-group>
                            </vni>
                        </member>
                        <source-interface>{$NVE_SOURCE}</source-interface>
                        <shutdown tags="delete"/>
                    </nve>
                    <Vlan>
                        <name>{string(../../sirb/vlan-id)}</name>
                        <description>{string(../../sirb/vlan-name)}</description>
                        <vrf>
                            <member>{string(../../name)}</member>
                        </vrf>
                        <ip>
                            <forward/>
                            <redirects>false</redirects>
                        </ip>
                        <ipv6>
                            <redirects>false</redirects>
                        </ipv6>
                    </Vlan>
                    <Vlan>
                        <name>{string(vlan-id)}</name>
                        <description>{string(vlan-name)}</description>
                        <vrf>
                            <member>{string(../../name)}</member>
                        </vrf>
                        <ip>
                            <address>
                                <ipaddr>{string(tenant-ip-address)}</ipaddr>
                                <tag>{$PREFIX-TAG}</tag>
                            </address>
                            <redirects>false</redirects>
                        </ip>
                        <ipv6>
                            <redirects>false</redirects>
                        </ipv6>
                        <fabric when="{anycast-gateway}">
                            <forwarding>
                                <mode>anycast-gateway</mode>
                            </forwarding>
                        </fabric>
                    </Vlan>
                </interface>

                <interface xmlns="http://tail-f.com/ned/cisco-nx" foreach="{interface/Port-channel}">
                    <port-channel>
                        <name>{string(id)}</name>
                        <switchport when="{mode = 'access'}">
                            <mode>access</mode>
                            <access>
                                <vlan>{string(../../vlan-id)}</vlan>
                            </access>
                        </switchport>
                        <switchport when="{mode = 'trunk'}">
                            <mode>trunk</mode>
                            <trunk>
                                <allowed>
                                    <vlan>
                                        <ids>{string(../../vlan-id)}</ids>
                                    </vlan>
                                </allowed>
                            </trunk>
                        </switchport>
                        <description>{string(description)}-Port-Channel</description>
                        <mtu>{string(mtu)}</mtu>
                        <spanning-tree>
                            <bpdufilter>enable</bpdufilter>
                            <port>
                                <type>edge</type>
                            </port>
                        </spanning-tree>
                        <storm-control>
                            <broadcast>
                                <level>5.0</level>
                            </broadcast>
                            <unicast>
                                <level>5.0</level>
                            </unicast>
                            <multicast>
                                <level>5.0</level>
                            </multicast>
                        </storm-control>
                        <shutdown tags="delete"/>
                    </port-channel>
                    <Ethernet foreach="{members/Ethernet}">
                        <name>{string(member-id)}</name>
                        <switchport when="{../../mode = 'access'}">
                            <mode>access</mode>
                            <access>
                                <vlan>{string(../../../../vlan-id)}</vlan>
                            </access>
                        </switchport>
                        <switchport when="{../../mode = 'trunk'}">
                            <mode>trunk</mode>
                            <trunk>
                                <allowed>
                                    <vlan>
                                        <ids>{string(../../../../vlan-id)}</ids>
                                    </vlan>
                                </allowed>
                            </trunk>
                        </switchport>
                        <channel-group>
                            <id>{string(../../id)}</id>
                            <mode>active</mode>
                        </channel-group>
                        <description>{string(../../description)}</description>
                        <mtu>{string(../../mtu)}</mtu>
                        <spanning-tree>
                            <bpdufilter>enable</bpdufilter>
                            <port>
                                <type>edge</type>
                            </port>
                        </spanning-tree>
                        <storm-control>
                            <broadcast>
                                <level>5.0</level>
                            </broadcast>
                            <unicast>
                                <level>5.0</level>
                            </unicast>
                            <multicast>
                                <level>5.0</level>
                            </multicast>
                        </storm-control>
                        <lldp>
                            <transmit>false</transmit>
                        </lldp>
                        <shutdown tags="delete"/>
                    </Ethernet>
                </interface>

                <interface xmlns="http://tail-f.com/ned/cisco-nx" foreach="{interface/Ethernet}">
                    <Ethernet>
                        <name>{string(id)}</name>
                        <switchport when="{mode = 'access'}">
                            <mode>access</mode>
                            <access>
                                <vlan>{string(../../vlan-id)}</vlan>
                            </access>
                        </switchport>
                        <switchport when="{mode = 'trunk'}">
                            <mode>trunk</mode>
                            <trunk>
                                <allowed>
                                    <vlan>
                                        <ids>{string(../../vlan-id)}</ids>
                                    </vlan>
                                </allowed>
                            </trunk>
                        </switchport>
                        <description>{string(description)}</description>
                        <mtu>{string(mtu)}</mtu>
                        <spanning-tree>
                            <bpdufilter>enable</bpdufilter>
                            <port>
                                <type>edge</type>
                            </port>
                        </spanning-tree>
                        <storm-control>
                            <broadcast>
                                <level>5.0</level>
                            </broadcast>
                            <unicast>
                                <level>5.0</level>
                            </unicast>
                            <multicast>
                                <level>5.0</level>
                            </multicast>
                        </storm-control>
                        <shutdown tags="delete"/>
                    </Ethernet>
                </interface>

            </config>
        </device>
    </devices>
</config-template>